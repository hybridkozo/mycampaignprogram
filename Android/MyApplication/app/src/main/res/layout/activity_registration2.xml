<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="#BBDEFB">


    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:paddingBottom="@dimen/com_facebook_likeboxcountview_caret_width"
        android:paddingLeft="@dimen/com_facebook_likeboxcountview_caret_width"
        android:paddingRight="@dimen/com_facebook_likeboxcountview_caret_width"
        android:paddingTop="@dimen/com_facebook_likeboxcountview_text_padding"
        android:background="@drawable/rounded_border_edittext"
        android:hint="Name" />

    <EditText
        android:id="@+id/surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginTop="20dp"
        android:paddingBottom="@dimen/com_facebook_likeboxcountview_caret_width"
        android:paddingLeft="@dimen/com_facebook_likeboxcountview_caret_width"
        android:paddingRight="@dimen/com_facebook_likeboxcountview_caret_width"
        android:paddingTop="@dimen/com_facebook_likeboxcountview_text_padding"
        android:background="@drawable/rounded_border_edittext"
        android:hint="Surname" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/surname"
        android:layout_marginTop="20dp"
        android:paddingBottom="@dimen/com_facebook_likeboxcountview_caret_width"
        android:paddingLeft="@dimen/com_facebook_likeboxcountview_caret_width"
        android:paddingRight="@dimen/com_facebook_likeboxcountview_caret_width"
        android:paddingTop="@dimen/com_facebook_likeboxcountview_text_padding"
        android:background="@drawable/rounded_border_edittext"
        android:hint="Email"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginTop="20dp"
        android:hint="Mobile"
        android:paddingBottom="@dimen/com_facebook_likeboxcountview_caret_width"
        android:paddingLeft="@dimen/com_facebook_likeboxcountview_caret_width"
        android:paddingRight="@dimen/com_facebook_likeboxcountview_caret_width"
        android:paddingTop="@dimen/com_facebook_likeboxcountview_text_padding"
        android:background="@drawable/rounded_border_edittext"
        android:inputType="phone"/>

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mobile"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:background="@drawable/rounded_border_button"
        android:text="Register"/>

</RelativeLayout>
